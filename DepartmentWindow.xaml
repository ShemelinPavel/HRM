<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRM"
        x:Name="window" x:Class="HRM.DepartmentWindow"
        mc:Ignorable="d"
        Title="Отдел:" Height="136.066" Width="400.467" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="tbName" Margin="10,20,10,54" TextWrapping="Wrap" Text="{Binding Name}"/>
        <Button x:Name="btSave" Content="Сохранить" HorizontalAlignment="Left" Margin="10,0,0,16" VerticalAlignment="Bottom" Width="75" Click="BtSave_Click"/>
        <Button x:Name="btClose" Content="Закрыть" HorizontalAlignment="Right" Margin="0,0,10,16" VerticalAlignment="Bottom" Width="75" Click="BtClose_Click"/>

    </Grid>
</Window>
